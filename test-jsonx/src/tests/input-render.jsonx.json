{
    "type": "renderer",
    "subtype": "group",
    "children": [
        {
            "type": "renderer",
            "subtype": "rawInput",
            "fieldSet": "input",
            "placeholder": "Test"
        },
        {
            "type": "renderer",
            "subtype": "rawText",
            "text": {
                "type": "value",
                "subtype": "function",
                "function": {
                    "code": "(opts) => opts.input.split(',').join(' - ')",
                    "opts": {
                        "input": "$data:input"
                    }
                }
            }
        }
    ]
}
