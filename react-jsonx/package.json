{
    "name": "react-jsonx",
    "version": "1.0.0",
    "description": "Modular &amp; Extensible React JSON Renderer",
    "author": "iTecAI",
    "license": "MIT",
    "repository": "iTecAI/react-jsonx",
    "main": "dist/index.js",
    "module": "dist/index.modern.js",
    "source": "src/index.tsx",
    "engines": {
        "node": ">=10"
    },
    "scripts": {
        "build": "microbundle --no-compress --format modern,cjs",
        "start": "microbundle watch --no-compress --format modern,cjs",
        "prepare": "run-s build",
        "test": "run-s test:unit test:lint test:build",
        "test:build": "run-s build",
        "test:lint": "eslint .",
        "test:unit": "cross-env CI=1 react-scripts test --env=jsdom",
        "test:watch": "react-scripts test --env=jsdom",
        "predeploy": "cd example && yarn install && yarn run build",
        "deploy": "gh-pages -d example/build",
        "document": "node ./scripts/doc.js"
    },
    "peerDependencies": {
        "react": "^16.0.0"
    },
    "devDependencies": {
        "@testing-library/jest-dom": "^4.2.4",
        "@testing-library/react": "^9.5.0",
        "@testing-library/user-event": "^7.2.1",
        "@types/jest": "^25.1.4",
        "@types/node": "^12.12.38",
        "@types/react": "^18.0.26",
        "@types/react-dom": "^18.0.10",
        "@typescript-eslint/eslint-plugin": "^5.0.0",
        "@typescript-eslint/parser": "^5.0.0",
        "babel-eslint": "^10.0.3",
        "cross-env": "^7.0.2",
        "eslint": "^6.8.0",
        "eslint-plugin-import": "^2.18.2",
        "gh-pages": "^2.2.0",
        "microbundle": "^0.15.1",
        "npm-run-all": "^4.1.5",
        "prettier": "^2.0.4",
        "react": "^16.13.1",
        "react-dom": "^16.13.1",
        "react-scripts": "^3.4.1",
        "typescript": "~4.5.4"
    },
    "files": [
        "dist"
    ],
    "dependencies": {
        "@blueprintjs/core": "^4.14.3",
        "@types/lodash": "^4.14.191",
        "lodash": "^4.17.21",
        "ts-json-schema-generator": "^1.2.0"
    }
}
