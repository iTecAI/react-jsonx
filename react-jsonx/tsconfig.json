{
    "compilerOptions": {
        "target": "ES6",
        "allowJs": true,
        "module": "ESNext",
        "skipLibCheck": true,
        "esModuleInterop": true,
        "noImplicitAny": true,
        "sourceMap": true,
        "baseUrl": ".",
        "outDir": "dist",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "jsxFactory": "React.createElement",
        "jsxFragmentFactory": "React.Fragment",
        "paths": {
            "*": ["node_modules/*"]
        },
        "jsx": "react"
    },
    "include": ["src/**/*"]
}
